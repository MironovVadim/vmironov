<web-app>
    <filter>
        <filter-name>Filter</filter-name>
        <filter-class>ru.job4j.carstorage.servlets.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Adding</servlet-name>
        <servlet-class>ru.job4j.todolist.servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Adding</servlet-name>
        <url-pattern>/adding</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>Completion</servlet-name>
    <servlet-class>ru.job4j.todolist.servlets.CompleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Completion</servlet-name>
        <url-pattern>/complete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>manageCars</servlet-name>
        <servlet-class>ru.job4j.carstorage.servlets.CarsManageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>manageCars</servlet-name>
        <url-pattern>/carstorage/carManager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>currentCarGetter</servlet-name>
        <servlet-class>ru.job4j.carstorage.servlets.CarGetterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>currentCarGetter</servlet-name>
        <url-pattern>/getCar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommentAdding</servlet-name>
        <servlet-class>ru.job4j.carstorage.servlets.CommentManageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommentAdding</servlet-name>
        <url-pattern>/createComment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAdding</servlet-name>
        <servlet-class>ru.job4j.carstorage.servlets.UserManageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserAdding</servlet-name>
        <url-pattern>/carstorage/createUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>ru.job4j.carstorage.servlets.CheckUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/carstorage/signIn</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Exit</servlet-name>
        <servlet-class>ru.job4j.carstorage.servlets.ExitAppServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Exit</servlet-name>
        <url-pattern>/carstorage/exit</url-pattern>
    </servlet-mapping>
</web-app>